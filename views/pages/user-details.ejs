<main class="container">

  <h1 class="title">User Details</h1>
  <p class="subtitle">This is the user details page. You can view the user details and their posts.</p>

  <div class="user-profile-card">
    <div class="user-avatar">
      <div class="avatar-circle"><%= user.name.charAt(0) %></div>
    </div>

    <div class="user-profile-info">
      <h2><%= user.name %></h2>
      <p class="username">@<%= user.username %></p>

      <div class="user-details-grid">

        <div class="detail-item">
          <p><strong>Email:</strong> <%= user.email %></p>
        </div>

        <div class="detail-item">
          <p><strong>Website:</strong> <%= user.website %></p>
        </div>

        <div class="detail-item">
          <p><strong>Phone:</strong> <%= user.phone %></p>
        </div>

        <div class="detail-item">
          <p><strong>Company:</strong> <%= user.company.name %></p>
        </div>

        <div class="detail-item">
          <p><strong>Address:</strong>
            <%= user.address.street %>,
            <%= user.address.city %>
          </p>
        </div>

        <div class="detail-item">
          <p><strong>Status:</strong> Active</p>
        </div>

      </div>
    </div>
  </div>

  <h2 class="section-title">Posts</h2>

  <div class="posts-list">
    <% posts.forEach(post => { %>
      <div class="post-card">
        <h3><%= post.title %></h3>
        <p><%= post.body.substring(0, 140) %>...</p>
        <a class="btn" href="/posts/<%= post.id %>">View Post â†’</a>
      </div>
    <% }) %>
  </div>
</main>
